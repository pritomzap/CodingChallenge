<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.platinacode.challenge">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".PlatinaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlatinaCodingChallenge">
        <activity
            android:name=".view.activities.NobleListActivity"
            android:exported="true"
            android:label="@string/title_activity_flims"
            android:theme="@style/Theme.PlatinaCodingChallenge.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activities.NobleDetailsActivity"
            android:exported="true"
            android:label="@string/title_activity_noble_details"
            android:theme="@style/Theme.PlatinaCodingChallenge.NoActionBar"/>
    </application>

</manifest>